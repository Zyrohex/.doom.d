# -*- mode: snippet -*-
# name: if-condition-note
# key: if-condition-note
# --
`(let ((texta (org-entry-get nil "TEXTA" t))
      (textb (org-entry-get nil "TEXTB" t))
      (textc (org-entry-get nil "TEXTC" t)))
  (unless texta
    (setq texta "$1"))
  (unless textb
    (setq textb "$2"))
  (unless textc
    (setq textc "$3"))
  (insert (format "\n#+caption: Notes for text# %s\n- %s\n- %s\n- Notes: %s %s" texta texta textb texta textb)))`